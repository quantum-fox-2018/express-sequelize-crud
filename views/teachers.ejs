<html>
  <head>
    <title>Teachers</title>
  </head>
  <body>
    <div>
      <a href="/">Home</a>
      <h2>Teachers Data</h2>
      <a href="/teachers/add">Add Teacher</a>
      <table border="1">
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
        <% teachers.forEach( teacher => {%>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
          <td>
            <a href="/teachers/edit/<%= teacher.id %>">Edit </a>|
            <a href="/teachers/delete/<%= teacher.id %>" onclick="return confirm('Are you sure want to delete this data?');"> Delete</a>
          </td>
        </tr>
        <% })%>
      </table>
    </div>
  </body>
</html>
