<html>
  <head>
    <title>Students</title>
  </head>
  <body>
    <div>
      <a href="/">Home</a>
      <h2>Students Data</h2>
      <a href="/students/add">Add Student</a>
      <table border="1">
        <tr>
          <th>id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
        <% students.forEach( student => {%>
        <tr>
          <td><%= student.id %></td>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td>
            <a href="/students/edit/<%= student.id %>">Edit </a>|
            <a href="/students/delete/<%= student.id %>" onclick="return confirm('Are you sure want to delete this data?');"> Delete</a>
          </td>
        </tr>
        <% })%>
      </table>
    </div>
  </body>
</html>
